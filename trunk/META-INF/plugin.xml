<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <name>Translator</name>
    <description>Uses Google Translate to translate the selected text</description>
    <version>1.0</version>
    <vendor>The Bit Bakery</vendor>

    <idea-version since-build="7000"/>

    <change-notes>
    </change-notes>

    <application-components>
        <component>
            <implementation-class>com.bitbakery.plugin.translator.TranslatorConfig</implementation-class>
        </component>
    </application-components>

    <actions>
        <action id="com.bitbakery.plugin.translator.TranslationAction"
                class="com.bitbakery.plugin.translator.TranslationAction" text="Translate"
                description="Use Google Translate to translate the selected text" icon="/icons/globe16.png">

            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>